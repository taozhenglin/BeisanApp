<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/top"
        layout="@layout/activity_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:padding="@dimen/dp5">

                <TextView
                    android:id="@+id/tv_material_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领料单编号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_material_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp5"
                    android:text=""
                    android:textColor="@color/guide_blue"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_material_no"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp3"
                    >

                    <TextView
                        android:id="@+id/tv_material_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*描述:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12"

                        />

                    <EditText
                        android:id="@+id/edt_desc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_toRightOf="@+id/tv_material_desc"
                        android:background="@drawable/radis8_layout_shape"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12"
                        android:padding="@dimen/dp5"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_top"
                    android:layout_marginTop="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_yusuan_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预算编号:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <EditText
                        android:id="@+id/edt_yusuan_no"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/radis8_layout_shape"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp5"
                        android:textSize="@dimen/sp12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:src="@drawable/next" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_1"
                    android:layout_marginTop="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_myusuanno_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预算单号描述:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <EditText
                        android:id="@+id/edt_yusuanno_desc"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/radis8_layout_shape"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp5"
                        android:textSize="@dimen/sp12"

                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_2"
                    android:layout_marginTop="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zhineng_dep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*职能部门:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <EditText
                        android:id="@+id/edt_zhineng_dep"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/radis8_layout_shape"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp5"
                        android:textSize="@dimen/sp12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:src="@drawable/next" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_3"
                    android:layout_marginTop="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shiyong_fangiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*使用方向:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <EditText
                        android:id="@+id/edt_shiyong_fangiang"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/radis8_layout_shape"
                        android:textColor="@color/black"
                        android:padding="@dimen/dp5"
                        android:textSize="@dimen/sp12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:src="@drawable/next" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_4"
                    android:layout_marginTop="@dimen/dp3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*工单类型:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_order_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:src="@drawable/next" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_5"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="总成本："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_iswar_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_5"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_toEndOf="@+id/tv_material_no"
                    android:text="是否战略物资："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_write_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cost"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="申请人："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_requset_dep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_cost"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_toEndOf="@+id/tv_material_no"
                    android:text="申请部门："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/tv_write_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_write_by"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="申请日期："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_material_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_write_time"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="申请班组："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_material_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_write_time"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_toEndOf="@+id/tv_material_no"
                    android:text="申请电话："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@color/guide_blue"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp5"
                android:text="领料明细行"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />


            <LinearLayout
                android:id="@+id/ll_material_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="vertical"

                />

            <TextView
                android:id="@+id/tv_new_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35"
                android:background="@color/guide_blue"
                android:gravity="center"
                android:paddingLeft="@dimen/dp5"
                android:text="新建行"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12"
                android:visibility="gone"

                />
        </LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentBottom="true"
        android:background="@color/guide_blue"
        android:gravity="center"
        android:text="启动工作流"
        android:textColor="@color/white"
        android:textSize="@dimen/sp12" />


</LinearLayout>