<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:background="@drawable/radis8_layout_shape"
    android:padding="@dimen/dp5">


    <TextView
        android:id="@+id/tv_project_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目编号："
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_line_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_project_no"
        android:layout_marginTop="@dimen/dp3"
        android:text="项目描述："
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_desc"
        android:layout_marginTop="@dimen/dp3"
        android:text="规格型号："
        android:textSize="@dimen/sp14" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_model"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="单位："
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_unit_notax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不含税单价："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_total_notax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="不含税总价："
            android:textSize="@dimen/sp14" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tv_tax_ratio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="税率："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_tax_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="税额："
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal"
        android:layout_below="@+id/ll3"

        >

        <TextView
            android:id="@+id/tv_unit_tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="含税单价："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="仓库："
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</RelativeLayout>