<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:background="@drawable/radis8_layout_shape"
    android:padding="@dimen/dp5">

    <TextView
        android:id="@+id/tv_contract_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合同编号："
        android:textSize="@dimen/sp14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_contract_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp5"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

    <ImageView
        android:id="@+id/iv_contract_statue"
        android:layout_width="@dimen/dp55"
        android:layout_height="@dimen/dp55"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp5" />

    <TextView
        android:id="@+id/tv_contract_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_no"
        android:layout_marginTop="@dimen/dp3"
        android:text="合同描述："
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_contract_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_desc"
        android:layout_marginTop="@dimen/dp3"
        android:text="成本总计："
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_contract_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_count"
        android:layout_marginTop="@dimen/dp3"
        android:text="甲方："
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_contract_yi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_jia"
        android:layout_marginTop="@dimen/dp3"
        android:text="乙方："
        android:textSize="@dimen/sp14" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contract_yi"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_contract_starttime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始时间："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_contract_endtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始时间："
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_contract_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="@dimen/dp3"
        android:text="合同编制人："
        android:textSize="@dimen/sp14" />
</RelativeLayout>