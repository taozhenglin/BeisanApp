<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/radis8_layout_shape"
    android:layout_margin="@dimen/dp5"
    android:padding="@dimen/dp5"
    >

    <TextView
        android:id="@+id/tv_contract_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合同编号："
        android:textStyle="bold"
        android:textSize="@dimen/sp12"
        />
    <TextView
        android:id="@+id/tv_contract_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp5"
        android:textSize="@dimen/sp12"
        />
    <ImageView
        android:id="@+id/iv_contract_statue"
        android:layout_width="@dimen/dp55"
        android:layout_height="@dimen/dp55"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp5"
        />
    <TextView
        android:id="@+id/tv_contract_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合同描述："
        android:layout_below="@+id/tv_contract_no"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp12"
        />

    <TextView
        android:id="@+id/tv_contract_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成本总计："
        android:layout_below="@+id/tv_contract_desc"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp12"
        />
    <TextView
        android:id="@+id/tv_contract_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="甲方："
        android:layout_below="@+id/tv_contract_count"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp12"
        />
    <TextView
        android:id="@+id/tv_contract_yi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乙方："
        android:layout_below="@+id/tv_contract_jia"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp12"
        />
    <TextView
        android:id="@+id/tv_contract_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间："
        android:layout_below="@+id/tv_contract_yi"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp12"
        />
    <TextView
        android:id="@+id/tv_contract_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间："
        android:layout_below="@+id/tv_contract_yi"
        android:layout_marginTop="@dimen/dp3"
        android:layout_toRightOf="@+id/tv_contract_starttime"
        android:layout_marginLeft="@dimen/dp20"
        android:textSize="@dimen/sp12"
        />
    <TextView
        android:id="@+id/tv_contract_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合同编制人："
        android:layout_below="@+id/tv_contract_starttime"
        android:layout_marginTop="@dimen/dp3"
        android:textSize="@dimen/sp12"
        />
</RelativeLayout>