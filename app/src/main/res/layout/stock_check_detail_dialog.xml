<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_backgroundColor"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radis8_layout_shape"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="盘点详情"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp30"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        >
        <TextView
            android:id="@+id/tv_line_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明细行序号："
            android:textSize="@dimen/sp12"
            android:layout_marginTop="@dimen/dp3"

            />

        <TextView
            android:id="@+id/tv_product_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:text="货位："
            android:textSize="@dimen/sp12"
            android:layout_toEndOf="@+id/tv_line_no"
            android:layout_marginLeft="@dimen/dp40"
            />

        <TextView
            android:id="@+id/tv_line_batch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_no"
            android:layout_marginTop="@dimen/dp3"
            android:text="批次："
            android:textSize="@dimen/sp12"
            />

        <TextView
            android:id="@+id/tv_prodution_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_batch"
            android:layout_marginTop="@dimen/dp3"
            android:text="物资编码："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_prodution_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_prodution_no"
            android:layout_marginTop="@dimen/dp3"
            android:text="物资描述："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_stock_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_prodution_desc"
            android:layout_marginTop="@dimen/dp3"
            android:text="库存数量："
            android:textSize="@dimen/sp12" />
        <TextView
            android:id="@+id/tv_tag_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_stock_count"
            android:layout_marginTop="@dimen/dp3"
            android:text="唯一标识码："
            android:textSize="@dimen/sp12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/radis8_layout_shape_button"

        >
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp30"
            android:textSize="@dimen/sp12"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="取消"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/tv_go"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp40"
            android:textSize="@dimen/sp12"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="继续盘点"

            />


    </LinearLayout>
    </LinearLayout>
</LinearLayout>