<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginRight="@dimen/dp8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_collect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="项目汇总："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_statues"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="@color/guide_blue"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_project_collect"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="描述："
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp3"
                    >

                    <TextView
                        android:id="@+id/tv_enquiry_type"
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:text="询价类型："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_duty_dep"
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:text="职能部门："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp3"
                    >

                    <TextView
                        android:id="@+id/tv_enquiry_by"
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_duty_dep"
                        android:text="采购员："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_request_dep"
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:text="申请部门："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp3"
                    >

                    <TextView
                        android:id="@+id/tv_request_team"
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:text="申请班组："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_contract"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:text="合同："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_baojia_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="报价合计金额(含税)："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_auth_amount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="授权合计金额(含税)："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_auth_amount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="授权合计金额（不含税）："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="备注："
                    android:textSize="@dimen/sp14" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:background="@color/guide_blue"
                android:gravity="center_vertical"
                android:text="报价供应商"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/tv_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:background="@color/guide_blue"
                android:gravity="center_vertical"
                android:text="供应商报价"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="vertical" />
        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@color/guide_blue"
            android:gravity="center"
            android:text="启动工作流"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_approval"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_weight="1"
            android:background="@color/guide_blue"
            android:gravity="center"
            android:text="工作流审批"
            android:textColor="@color/white"
            android:visibility="gone"


            />


    </LinearLayout>

</LinearLayout>