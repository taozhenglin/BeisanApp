<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radis8_layout_shape"
        android:orientation="vertical"
        android:padding="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_material_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="领料单编号："
                android:textSize="@dimen/sp14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_material_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_material_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_material_statue"
            android:layout_marginTop="@dimen/dp3"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="领料单描述："
            android:textSize="@dimen/sp14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_function_dep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="职能部门："
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_requset_dep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="申请部门："
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_material_team"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:ellipsize="end"
                android:maxLines="1"
                android:text="班组："
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tv_material_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="总金额："
                android:textSize="@dimen/sp14" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_write_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_material_team"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="填报人："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_write_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_write_by"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="填报时间："
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_contract_statue"
        android:layout_width="@dimen/dp55"
        android:layout_height="@dimen/dp55"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp5" />
</RelativeLayout>