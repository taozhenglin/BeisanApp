<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        />


    <LinearLayout style="@style/wrap_layout">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout">

            <TextView
                style="@style/usertext"
                android:text="姓名:" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/usertextvalue"
                android:text="标准 " />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@color/color_divider" />

        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">

            <TextView
                style="@style/usertext"
                android:text="登陆账号:" />

            <TextView
                android:id="@+id/tv_num"
                style="@style/usertextvalue"
                android:text="标准 " />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@color/color_divider" />
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">

            <TextView
                style="@style/usertext"
                android:text="当前环境" />

            <TextView
                android:id="@+id/tv_current_env"
                style="@style/usertextvalue"
                android:text="标准 " />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@color/color_divider" />
        <!-- 下圆角-->
        <LinearLayout
            style="@style/bottom_layout"
            android:visibility="gone">

            <TextView
                style="@style/usertext"
                android:text="当前版本" />

            <TextView
                android:id="@+id/tv_current_version"
                style="@style/usertextvalue"
                android:text="标准 " />

        </LinearLayout>

        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout">

            <TextView
                style="@style/usertext"
                android:text="当前版本：" />

            <TextView
                android:id="@+id/txtCurVersion"
                style="@style/usertextvalue"
                android:text="标准 " />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@color/color_divider" />
        <!-- 下圆角-->
        <LinearLayout
            android:id="@+id/ll_scan"
            style="@style/bottom_layout">

            <TextView
                style="@style/usertext"
                android:text="扫一扫" />



        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/login_button_style"
        android:text="退出登录"
        android:textColor="@color/main_backgroundColor"
        android:textSize="@dimen/sp16" />
</LinearLayout>
