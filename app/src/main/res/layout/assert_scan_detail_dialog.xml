<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/radis8_layout_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp30"
            android:text="固定资产详情"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_assert_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"

                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="固定资产编码:"
                    android:textSize="@dimen/sp12"

                    />


                <TextView
                    android:id="@+id/tv_assert_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_line_no"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="固定资产名称："
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_assert_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_line_batch"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="固定资产类别："
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_assert_xh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prodution_no"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="资产规格型号："
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_assert_statues"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_prodution_desc"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="状态："
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_assert_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="资产数量："
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="项目主办部门："
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_count_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="计量单位："
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_jjyt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="经济用途："
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="使用部门："
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/tv_syqk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="使用情况："
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="购买日期："
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_cfdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="存放地点："
                    android:textSize="@dimen/sp12" />

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/radis8_layout_shape_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_go"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_weight="1"
                android:gravity="center"
                android:text="继续盘点"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>