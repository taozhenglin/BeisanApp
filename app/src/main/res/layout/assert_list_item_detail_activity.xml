<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp5"
        android:padding="@dimen/dp5"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/tv_assert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固定资产名称："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_has_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_toEndOf="@+id/tv_assert_name"
                android:text="是否已盘点："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_assert_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assert_name"
                android:layout_marginTop="@dimen/dp3"
                android:text="资产管理员："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_origin_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assert_name"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginTop="@dimen/dp3"
                android:layout_toEndOf="@+id/tv_assert_name"
                android:text="资产原值"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_shiyong_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assert_admin"
                android:layout_marginTop="@dimen/dp3"
                android:text="使用情况："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_shiyong_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assert_admin"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginTop="@dimen/dp3"
                android:layout_toEndOf="@+id/tv_assert_name"
                android:text="使用人："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_shigong_deparment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shiyong_statue"
                android:layout_marginTop="@dimen/dp3"
                android:text="施工单位："
                android:textSize="@dimen/sp12" />


            <TextView
                android:id="@+id/tv_project_deparment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shigong_deparment"
                android:layout_marginTop="@dimen/dp3"
                android:text="项目主办部门："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_owner_companny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_project_deparment"
                android:layout_marginTop="@dimen/dp3"
                android:text="所属公司："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_assert_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_owner_companny"
                android:layout_marginTop="@dimen/dp3"
                android:text="固定资产类别："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_xinghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_assert_type"
                android:layout_marginTop="@dimen/dp3"
                android:text="资产规格型号："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_count_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_xinghao"
                android:layout_marginTop="@dimen/dp3"
                android:text="账户入账时间："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_buy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_zhejiu"
                android:layout_marginTop="@dimen/dp3"
                android:text="购买时间："
                android:textSize="@dimen/sp12" />


            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_buy_time"
                android:layout_marginTop="@dimen/dp3"
                android:text="启用时间："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_zhejiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_count_date"
                android:layout_marginTop="@dimen/dp3"
                android:text="折旧年限："
                android:textSize="@dimen/sp12" />


            <ImageView
                android:id="@+id/iv_haschecked"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:src="@drawable/checked"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_start_time"
                android:layout_marginTop="@dimen/dp3"
                android:gravity="center_vertical"
                android:text="存放地点："
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_below="@+id/tv_store_address"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_start_time"
                    android:layout_gravity="center_vertical"
                    android:text="盘点后存放地点："
                    android:textSize="@dimen/sp12" />

                <EditText
                    android:id="@+id/edt_store_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radis8_layout_shape"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/dp5"
                    android:singleLine="true"

                    android:textSize="@dimen/sp11" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"
                android:gravity="center_vertical"
                android:text="使用部门："
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:layout_below="@+id/tv_department"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="盘点后使用部门："
                    android:textSize="@dimen/sp12" />

                <EditText
                    android:id="@+id/edt_department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radis8_layout_shape"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/dp5"
                    android:singleLine="true"
                    android:textSize="@dimen/sp11" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/guide_blue"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>