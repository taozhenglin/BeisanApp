<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical"
            android:padding="@dimen/dp5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contract_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="合同编号："
                    android:textSize="@dimen/sp12"

                    />

                <TextView
                    android:id="@+id/tv_contract_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/guide_blue"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_contract_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contract_no"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="合同描述："
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:id="@+id/ll_assginman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_assginman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="授权代表:"
                    android:textSize="@dimen/sp12" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:src="@drawable/next" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_xunjia_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contract_desc"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="询价单编号："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_xunjia_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_xunjia_no"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="询价单描述："
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_isyear_contract"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="是否年度招标合同："
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="主管部门："
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_contract_jia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="甲方："
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_contract_yi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="乙方："
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="公司："
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_request_department"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="申请部门："
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_contract_created"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="合同编制人："
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_contract_signtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_request_department"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"

                android:text="合同签订日期："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_contract_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contract_signtime"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="合同金额："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_contract_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="合同开始日期："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_contract_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp3"
                android:maxLines="1"
                android:text="合同结束日期："
                android:textSize="@dimen/sp12" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:background="@color/guide_blue"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp8"
            android:text="合同相关附件"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
