<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:padding="@dimen/dp5"
    android:orientation="vertical"
    android:background="@drawable/radis8_layout_shape"
    >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_line_no"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="计划行："
           android:textSize="@dimen/sp12"
           />
       <TextView
           android:id="@+id/tv_wuzi_no"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="物资编码："
           android:textSize="@dimen/sp12"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/dp5"
           />
   </LinearLayout>
    <TextView
        android:id="@+id/tv_line_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:text="物资描述："
        android:textSize="@dimen/sp12"
        android:layout_below="@+id/tv_line_no"
        />

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_desc"
        android:textSize="@dimen/sp12"
        android:layout_marginTop="@dimen/dp3"
        android:text="规格型号：" />
    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_model"
        android:layout_marginTop="@dimen/dp3"
        android:text="订购单位："
        android:textSize="@dimen/sp12" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="数量："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="备注："
            android:textSize="@dimen/sp12" />
    </LinearLayout>





   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp3"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_unit_cost"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="单位成本："
           android:textSize="@dimen/sp12" />

       <TextView
           android:id="@+id/tv_line_cost"
           android:layout_height="wrap_content"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:text="行成本："
           android:textSize="@dimen/sp12" />
   </LinearLayout>


</LinearLayout>