<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:padding="@dimen/dp5"
    android:background="@drawable/radis8_layout_shape"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_request_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申请单号："
                android:textSize="@dimen/sp12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_request_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp5"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_system_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_request_no"
            android:layout_marginTop="@dimen/dp3"
            android:text="系统编号："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_facility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:text="设施名称："
            android:textSize="@dimen/sp12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_big_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设备大类："
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/tv_small_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_facility_name"
                android:layout_weight="1"
                android:text="设备小类："
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_write_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:text="创建人："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_write_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间："
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_contract_statue"
        android:layout_width="@dimen/dp55"
        android:layout_height="@dimen/dp55"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp5"

        />

</RelativeLayout>