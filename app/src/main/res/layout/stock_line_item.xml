<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:background="@drawable/radis8_layout_shape"
    android:orientation="vertical"
    android:padding="@dimen/dp5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_line_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="明细行序号："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_product_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:text="货位："
            android:textSize="@dimen/sp12" />
    </LinearLayout>



        <TextView
            android:id="@+id/tv_line_batch"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp3"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="行类型："
            android:textSize="@dimen/sp12" />


    <TextView
        android:id="@+id/tv_prodution_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:text="物资编码："
        android:textSize="@dimen/sp12" />
    <TextView
        android:id="@+id/tv_prodution_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_desc"
        android:layout_marginTop="@dimen/dp3"
        android:text="物资描述："
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_stock_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_model"
        android:layout_marginTop="@dimen/dp3"
        android:text="库存数量："
        android:textSize="@dimen/sp12" />


    <TextView
        android:id="@+id/tv_actually_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实盘数量："
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_diff_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="差异数量："
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_unit_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单位成本："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_line_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="行成本："
            android:textSize="@dimen/sp12" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:text="仓库："
        android:textSize="@dimen/sp12" />

</LinearLayout>
    <ImageView
        android:id="@+id/iv_modify"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:src="@drawable/modify"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginBottom="20dp"

        >

    </ImageView>
</FrameLayout>