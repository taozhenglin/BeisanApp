<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        android:padding="@dimen/dp5">


        <TextView
            android:id="@+id/tv_pandian_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘点单编号："
            android:textSize="@dimen/sp14"


            />

        <TextView
            android:id="@+id/tv_pandian_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pandian_no"
            android:layout_marginTop="@dimen/dp3"
            android:text="盘点描述："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_pandian_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pandian_desc"
            android:layout_marginTop="@dimen/dp3"
            android:text="盘点日期："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pandian_desc"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginTop="@dimen/dp3"
            android:layout_toEndOf="@id/tv_pandian_no"
            android:text="仓库："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pandian_date"
            android:layout_marginTop="@dimen/dp3"
            android:text="创建人："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_created_by"
            android:layout_marginTop="@dimen/dp3"
            android:text="创建时间："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_big_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_created_time"
            android:layout_marginTop="@dimen/dp3"
            android:text="大类："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_middle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_created_time"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginTop="@dimen/dp3"
            android:layout_toEndOf="@+id/tv_pandian_no"
            android:text="中类："
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_small_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_big_type"
            android:layout_marginTop="@dimen/dp3"
            android:text="小类："
            android:textSize="@dimen/sp14" />


    </RelativeLayout>

    <TextView
        android:layout_below="@+id/rl"
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/guide_blue"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp8"
        android:text="盘点明细行"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="0dip"
            android:scrollbars="vertical" />

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>


</LinearLayout>