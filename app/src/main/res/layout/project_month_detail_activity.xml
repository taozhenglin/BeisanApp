<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/activity_common_title" />

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_approval"
        android:layout_below="@+id/include">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="vertical"
                android:padding="@dimen/dp5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_request"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="项目申请："
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_statue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:text=""
                        android:textColor="@color/guide_blue"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="描述："
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="立项类型："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_categroy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="立项类别："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_yusuan_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_categroy"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="预算编号："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_yusuan_ndesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yusuan_no"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="预算描述："
                    android:textSize="@dimen/sp14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_huizong_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="汇总年月："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_sum_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="总金额："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_dept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="主管部门："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_requset_dep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请部门："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_requset_team"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请班组："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_requset_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请类型："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_owner_companny"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="所属公司："
                        android:textSize="@dimen/sp14" />

                    <TextView
                        android:id="@+id/tv_plan_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="计划类型："
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_has_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_owner_companny"
                    android:text="是否已验收："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_has_checked"
                    android:text="备注："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_plan_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_note"
                    android:text="计划开始时间："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_plan_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_plan_start"
                    android:text="计划结束时间："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_created_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_plan_end"
                    android:text="创建人："
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_created_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_created_by"
                    android:text="创建时间："
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:background="@color/guide_blue"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp8"
                android:text="计划行"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_plan_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"
                android:background="@color/guide_blue"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp8"
                android:text="相关附件"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:id="@+id/ll_attach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_margin="@dimen/dp3"
                />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_approval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_alignParentBottom="true"
        android:background="@color/guide_blue"
        android:gravity="center"
        android:text="工作流审批"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />
</RelativeLayout>