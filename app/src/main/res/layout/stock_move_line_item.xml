<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:background="@drawable/radis8_layout_shape"
    android:orientation="vertical"
    android:padding="@dimen/dp5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="物资编码："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_use_statue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:text="使用情况类型："
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_line_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line_no"
            android:layout_weight="1"
            android:text="行类型："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量："
            android:textSize="@dimen/sp12" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_desc"
        android:layout_marginTop="@dimen/dp3"
        android:text="物资描述："
        android:textSize="@dimen/sp12" />
    <TextView
        android:id="@+id/tv_ori_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line_desc"
        android:layout_marginTop="@dimen/dp3"
        android:text="原货柜："
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_ori_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_model"
        android:layout_marginTop="@dimen/dp3"
        android:text="原批次："
        android:textSize="@dimen/sp12" />


    <TextView
        android:id="@+id/tv_target_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标库房："
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_target_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标货柜："
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/tv_target_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标批次："
        android:textSize="@dimen/sp12" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp3"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_unit_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单位成本："
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_line_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="行成本："
            android:textSize="@dimen/sp12" />
    </LinearLayout>


</LinearLayout>